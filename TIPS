    mydata <- c()
     for (i in id) {
          cfile <- file.path(directory, paste(gsub(" ", "0", format(i, width=3)), ".csv", sep=""))
          provdata <- read.csv(cfile)
          mydata <- c(mydata, provdata[pollutant])
     }
     return (round(mean(mydata, na.rm=TRUE), digits=3))
